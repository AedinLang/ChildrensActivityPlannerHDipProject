@model IEnumerable<NewKidsActivityProject.Models.Enrollment>

@{
    ViewBag.Title = "EditEnrollment";
}

<h3><u>Select enrollment to register payment</u></h3>
<h4>  </h4>
<table class="table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity.NameOfActivity)
        </th>
        <th>
           Child
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kid.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.NameOfActivity)
            </td>
            <td>
                @Html.ActionLink(item.Kid.FirstName + item.Kid.LastName, "Edit", new { id = item.EnrollmentID })                
            <td>
                @Html.DisplayFor(modelItem => item.Kid.DOBInFormatWanted)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.PaymentDue)
            </td>
         </tr>
    }

</table>