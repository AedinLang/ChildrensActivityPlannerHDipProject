@model IEnumerable<NewKidsActivityProject.Models.Enrollment>

@{
    ViewBag.Title = "EditEnrollment";
}

<h3><u>Select enrollment to edit</u></h3>
<h4>  </h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Activity.NameOfActivity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kid.FirstName)
            @Html.DisplayNameFor(model => model.Kid.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kid.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.NameOfActivity)
            </td>
            <td>
                @Html.ActionLink(item.Kid.FirstName + item.Kid.LastName, "Edit", new { id = item.EnrollmentID })                
            <td>
                @Html.DisplayFor(modelItem => item.Kid.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDue)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
            </td>
        </tr>
    }

</table>