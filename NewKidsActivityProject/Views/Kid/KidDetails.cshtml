@model NewKidsActivityProject.Models.Kid

@{
    ViewBag.Title = "KidDetails";
}

<h3><u>Details for: @Model.FirstName @Model.LastName</u></h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DOB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOBInFormatWanted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MedicalIssues)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MedicalIssues)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MedicalIntervention)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MedicalIntervention)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianFirstName)
            @Html.DisplayNameFor(model => model.GuardianLastName)
        </dt>

        <dd>
            Guardian
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GuardianContactNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GuardianContactNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactEmail)
        </dd>
        </dl>
    <dl>
        <dd>
            <table class="table-bordered">
                <tr>
                    <th>Enrolled In</th>
                </tr>
                @foreach (var item in Model.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activity.NameOfActivity),
                            @Html.DisplayFor(modelItem => item.Activity.DayOfActivity),
                            @Html.DisplayFor(modelItem => item.Activity.TimeOfActivityValue)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        </dl>
   </div>
<p>
    @Html.ActionLink("Back to List", "AllKids") | 
    @Html.ActionLink("Edit Child", "Edit", new { id = Model.KidID }) |
    @Html.ActionLink("Remove Child", "Delete", new { id = Model.KidID })|
    @Html.ActionLink("Enroll in activity", "Create", "Enrollment", new { id=Model.KidID}, null)
</p>


