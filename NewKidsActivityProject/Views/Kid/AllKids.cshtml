@model IEnumerable<NewKidsActivityProject.Models.Kid>

@{
    ViewBag.Title = "AllKids";
}
<h1> </h1>
<h3><u>List of all the children registered to do activities</u></h3>
<h1> </h1>
<h4>Select a child to review their details</h4>
<h1></h1>
<table class="table-bordered">
    <tr>
        <th>
            Child's Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.ActionLink(item.FirstName + item.LastName, "KidDetails", new { id = item.KidID })       <!--combine first and second name for link-->
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOBInFormatWanted)
            </td>
        </tr>
    }


</table>


<div>
    <p>  </p>
    @Html.ActionLink("Add New Child", "Create")
</div>

