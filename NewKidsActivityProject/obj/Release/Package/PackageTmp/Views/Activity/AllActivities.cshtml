@model IEnumerable<NewKidsActivityProject.Models.Activity>

@{
    ViewBag.Title = "AllActivities";
}


<h1> </h1>
<h3><u>List of all Activities</u></h3>
<h1> </h1>
<h4>Select an Activity to review it's details</h4>
<h1></h1>

<table class="table-bordered">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(Model => Model.NameOfActivity)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.DayOfActivity)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.TimeOfActivityValue)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.Description)
            
        </th>
    </tr>
   
    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.ActionLink(item.NameOfActivity, "ActivityDetails", new { id = item.ActivityID }) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayOfActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfActivityValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }

    
</table>

<div>
    <p>   </p>
    @Html.ActionLink("Add New Activity", "Create")
</div>
